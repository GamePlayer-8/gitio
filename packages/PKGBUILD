# Maintainer: Chimmie Firefly <gameplayer2019pl (at) tutamail (dot) com>
pkgname=gitio-git
_pkgname=gitio-git
pkgver=rx
pkgrel=1
pkgdesc='Frontend API for interacting with git hosting for CI.'

arch=(
	'any'
)

url="https://gameplayer-8.codeberg.page/gitio"
license=('Akini 3.1')

depends=(
    'openssl'
    'coreutils'
    'git'
    'sed'
    'gawk'
    'curl'
    'jq'
)

optdepends=(
    'kaniko: Build containers'
    'openssh: SSH based auth using git'
)

makedepends=(
    'pacman'
)

provides=(
	'gitio'
)

conflicts=(
	'gitio'
)

source=(
    "https://gameplayer-8.codeberg.page/gitio/packages/zst/pkg.tar.gz"
)

sha256sums=(
    'SKIP'
)

prepare() {
    # Download sha256sum using curl
    cd "${srcdir}"
    curl -LO "https://gameplayer-8.codeberg.page/gitio/packages/zst.sha256.txt"
    local filename="${srcdir}/pkg.tar.gz"
    # Calculate the SHA256 hash using sha256sum
    sha256sum "$filename" > hash.txt
    if ! diff hash.txt zst.sha256.txt > /dev/null; then
        echo 'SHA256SUM missmatch!'
        exit 8
    fi
    rm -f zst.sha256.txt hash.txt
}

pkgver() {
    cd "${srcdir}"
	echo 'r'"$(date +%s)"
}

build() {
	cd "${srcdir}"
	tar -xvf pkg.tar.gz
    mv default-fs "${pkgname}"
    
}

package() {
    cd "${srcdir}"
    noextract=("pkg.tar.gz")
	cd "${srcdir}/${pkgname}"
    mkdir -p "${pkgdir}" 2>/dev/null 3>&2
    cp -rv * "${pkgdir}/"
    chmod +x "${pkgdir}"/usr/bin/*
}