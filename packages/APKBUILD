# Maintainer: Chimmie Firefly <gameplayer2019pl@tutamail.com>
pkgname=gitio
pkgver=0 # rolling
pkgrel=0
pkgdesc="Frontend API for interacting with git hosting for CI."
url="https://gameplayer-8.codeberg.page/gitio"
arch="any"
license="Akini 3.1"
depends="tar gzip git curl gawk coreutils"
makedepends="apk"
install=""
subpackages=""
source="https://gameplayer-8.codeberg.page/gitio/packages/zst/pkg.tar.gz"

optdepends="openssh: Git over SSH.
            kaniko: Building containers."

build() {
    cd "$srcdir/pkg"
}

package() {
    cd "$srcdir/pkg"
    mv default-fs/* "$pkgdir/"
    chmod +x "$pkgdir/usr/bin/gitio"
}